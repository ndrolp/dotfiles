{
    "pyprland": {
        "plugins": [
            "scratchpads",
            "magnify"
        ]
    },
    "scratchpads": {
        "term": {
            "command": "kitty --class scratchpad",
            "margin": 50,
            "animation": "fromTop",
            "lazy": true,
            "unfocus": "hide"
        },
        "pavucntrl": {
            "command": "pavucontrol",
            "margin": 50,
            "animation": "fromTop",
            "lazy": true,
            "unfocus": "hide"
        }
    }
}
