        },
        "single-icons": {
            "on": "ÔÄû1 ",
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã",
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)",
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞",
        },
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10,
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false,
    },
    "memory": {
